<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CMPUT301W23T31Project" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_primary_color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/forehead_bar_color</item>
        <!-- Customize your theme here. -->
        <item name="android:actionOverflowButtonStyle">@style/OverFlow</item>
    </style>

    <style name="OverFlow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/hamburger_menu</item>
    </style>

    <!-- TEXT STYLING STARTS HERE -->

    <style name="basic_text" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/default_text_color</item>
    </style>

    <style name="basic_mini_text" parent="basic_text">
        <item name="android:textSize">12sp</item>

    </style>

    <style name="italic_small_text" parent="basic_small_text">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="basic_small_text" parent="basic_text">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="italic_medium_text" parent="basic_medium_text">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="basic_medium_text" parent="basic_text">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="italic_large_text" parent="basic_large_text">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="basic_large_text" parent="basic_text">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="bold_header" parent="basic_text">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/header_accent_color</item>
    </style>

    <style name="bold_mini_header" parent="bold_header">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="bold_tiny_header" parent="bold_header">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="bold_sub_header" parent="bold_header">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="bold_medium_header" parent="bold_header">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="accent_medium_header" parent="bold_medium_header">
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="bolder_larger_header" parent="bold_header">
        <item name="android:textSize">48sp</item>
        <item name="fontFamily">sans-serif-black</item>
    </style>

    <style name="basic_large_header" parent="basic_text">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="button_style" parent="basic_text">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="navigation_button_style" parent="button_style">
        <item name="android:textSize">24sp</item>
        <item name="android:backgroundTint">@color/activity_navigation_button_color</item>
    </style>

    <style name="action_button_style" parent="button_style">
        <item name="android:textSize">20sp</item>
        <item name="android:backgroundTint">@color/activity_action_button_color</item>
    </style>

    <style name="code_info_button_style" parent="button_style">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:backgroundTint">@color/view_code_details_color</item>
    </style>

    <style name="player_info_button_style" parent="button_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:backgroundTint">@color/view_profile_button_color</item>
    </style>

    <style name="floating_button_style" parent="basic_text">
        <item name="android:layout_margin">8dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">@color/floating_button_color</item>
        <item name="android:textColor">@color/floating_button_text</item>
    </style>


</resources>