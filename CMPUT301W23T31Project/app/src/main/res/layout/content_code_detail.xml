<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/code_detail_tier_indicator"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:background="#FFD700"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/code_detail_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="2023-02-02"
                android:textStyle="italic"
                android:textSize="24dp"
                android:layout_margin="2dp"/>

            <TextView
                android:id="@+id/code_detail_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="395811 Points"
                android:textSize="24dp"
                android:layout_margin="2dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/code_detail_code_info_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/hamburger_menu"
                android:drawableTintMode="src_atop"
                android:text="Code\nInfo"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:srcCompat="@android:drawable/ic_menu_delete">

            </ImageButton>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>