<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/scan_results_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:hint="Results Score"
        style="@style/bold_sub_header"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/scan_results_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:hint="Record Location?"
            style="@style/bold_medium_header" />

        <ToggleButton
            android:id="@+id/location_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Record Location?"/>

        <TextView
            android:id="@+id/set_on_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:hint="Location"
            style="@style/bold_sub_header"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <TextView
        android:id="@+id/scan_results_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:hint="Results Data"
        style="@style/bold_sub_header"/>

    <Button
        android:id="@+id/scan_results_camera_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Upload image of QR code location"
        style="@style/action_button_style"/>

</LinearLayout>