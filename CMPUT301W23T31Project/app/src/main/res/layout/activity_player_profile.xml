<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:alpha="0.5"
    android:background="@drawable/drawable_ui"
    android:backgroundTint="#025E8F"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            android:id="@+id/player_profile_username"
            android:layout_width="match_parent"
            android:fontFamily="sans-serif-condensed-medium"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content">

        </TextView>
        <ImageView
            android:id="@+id/trophy"
            android:layout_width="180dp"
            android:layout_height="140dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            app:srcCompat="@drawable/player_stats" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Total Score"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/player_profile_total_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:hint="Score"
            android:fontFamily="@font/mali"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"
            android:textSize="19sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Total Scans"
            android:fontFamily="@font/mali"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/player_profile_total_scans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:fontFamily="@font/mali"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"
            android:hint="Scans"
            android:textSize="19sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Rank (by Highest Total Score)"
            android:fontFamily="@font/mali"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/player_info_rank_by_total_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:hint="Rank 1"
            android:fontFamily="@font/mali"
            android:textColor="@color/black"
            android:textSize="19sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Rank (by Highest Unique Score)"
            android:fontFamily="@font/mali"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/player_info_rank_by_unique_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:hint="Rank 2"
            android:fontFamily="@font/mali"
            android:textColor="@color/black"
            android:textSize="19sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Highest Scoring QR Code"
            android:fontFamily="@font/mali"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/player_profile_high_score"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:text="High"
            android:fontFamily="@font/mali"
            android:textColor="@color/black"
            android:textSize="19sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Lowest Scoring QR Code"
            android:fontFamily="@font/mali"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/player_profile_low_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:text="Low"
            android:fontFamily="@font/mali"
            android:textColor="@color/black"
            android:textSize="19sp"/>

        <Button
            android:id="@+id/player_profile_see_scans_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"
            android:background="@drawable/round_button"
            app:backgroundTint="@color/profile_button_back"
            android:fontFamily="@font/lato"
            android:text="View All Scans"
            android:textSize="24sp" />


    </LinearLayout>



    </LinearLayout>

